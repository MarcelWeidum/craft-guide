{% if entry ?? false %}
    {% for userGuide in guideQuery({ sectionId: entry.section.id, typeId: entry.type.id }) %}
         <div id="adminbar_guide_for_entry__body" class="guide_text guide__modal">
            {{ renderUserGuideBody({
                content: userGuide.content,
                format: userGuide.format,
                userGuide: userGuide,
            })|raw }}
         </div>
    {% endfor %}
{% endif %}

{% css view.registerCssFile(view.getAssetManager().getPublishedUrl('@wbrowar/guide/assetbundles/guide/dist', true) ~ '/css/guide.css') %}

{% set css %}
    #adminbar_guide_for_entry__body h1 { font-size: 2.2em; color: var(--adminbar-color-highlight); }
    #adminbar_guide_for_entry__body h2 { font-size: 1.4em; color: var(--adminbar-color-highlight); }
{% endset %}

{% set js %}
    if (document.getElementById('adminbar_guide_for_entry__body') === null) { adminBarRemoveWidget('{{ id }}'); };
{% endset %}

{{ addAdminBarCss(css) }}
{{ addAdminBarJs(js) }}